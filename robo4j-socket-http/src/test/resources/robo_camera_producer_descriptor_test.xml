<robo4j>
    <roboUnit id="httpClient">
        <class>com.robo4j.socket.http.units.HttpClientDescriptorUnit</class>
        <config name="com.robo4j.root">
            <value name="address" type="String">0.0.0.0</value>
            <value name="port" type="int">8032</value>
            <value name="responseHandler">httpClientResponse</value>
            <value name="targetUnits" type="String">[{"imageProcessor":["POST"]}]</value>
        </config>
    </roboUnit>
    <roboUnit id="imageDescriptor">
        <class>com.robo4j.socket.http.units.CameraImageDescriptorUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">httpClient</value>
            <value name="host" type="String">0.0.0.0</value>
            <value name="hostPort" type="String">8032</value>
            <value name="remoteUnits" type="String">[{"imageProcessor":["POST"]}]</value>
        </config>
    </roboUnit>
    <roboUnit id="camera">
        <class>com.robo4j.socket.http.units.test.CameraImageProducerDescTestUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">imageDescriptor</value>
            <value name="fileName" type="String">snapshot.png</value>
            <value name="numberOfImages" type="int">10</value>
        </config>
    </roboUnit>
</robo4j>