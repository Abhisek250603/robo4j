
<robo4j>
    <roboUnit id="stringConsumer">
        <class>com.robo4j.StringConsumer</class>
    </roboUnit>
    <roboUnit id="httpServer">
        <class>com.robo4j.socket.http.units.HttpServerUnit</class>
        <config name="com.robo4j.root">
            <value name="port" type="int">8050</value>
            <value name="target" type="String">stringConsumer</value>
            <value name="packages" type="String">com.robo4j.socket.http.codec</value>
            <value name="targetUnits" type="String">{"stringConsumer":"POST"}</value>
        </config>
    </roboUnit>
</robo4j>